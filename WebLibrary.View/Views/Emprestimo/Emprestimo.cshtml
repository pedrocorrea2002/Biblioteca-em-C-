@model IEnumerable<WebLibrary.Model.LivroClienteEmprestimo>

@{
    ViewData["Title"] = "Emprestimos";
}

<h1>Lista de Emprestimos</h1>

<p>
    <a class="btn btn-primary"asp-action="Create">Criar Novo</a>
</p>
<table class="table table-striped table-hover ">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmprestimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDevolucao)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.IdClienteNavigation.Nome)*@
                Cliente
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.IdLivroNavigation.Nome)*@
                Livro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEmprestimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDevolucao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClienteNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLivroNavigation.Nome)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
